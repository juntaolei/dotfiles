{
    "editor.tabSize": 2,
    "editor.rulers": [
        80
    ],
    "editor.formatOnSave": true,
    "editor.cursorStyle": "block",
    "editor.fontFamily": "'Fira Code Regular', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.wordWrap": "wordWrapColumn",
    "editor.padding.top": 8,
    "editor.padding.bottom": 8,
    "editor.renderWhitespace": "trailing",
    "files.eol": "\n",
    "files.autoSave": "onWindowChange",
    "files.enableTrash": true,
    "workbench.startupEditor": "none",
    "workbench.colorTheme": "Dracula",
    "workbench.iconTheme": "material-icon-theme",
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    "window.menuBarVisibility": "toggle",
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "<C-h>"
            ],
            "after": [
                "<Left>"
            ]
        },
        {
            "before": [
                "<C-j>"
            ],
            "after": [
                "<Down>"
            ]
        },
        {
            "before": [
                "<C-k>"
            ],
            "after": [
                "<Up>"
            ]
        },
        {
            "before": [
                "<C-l>"
            ],
            "after": [
                "Right"
            ]
        }
    ],
    "vim.hlsearch": true,
    "vim.statusBarColorControl": true,
    "vim.statusBarColors.normal": "#273469",
    "vim.statusBarColors.insert": "#EF767A",
    "vim.statusBarColors.visual": "#ECA400"
}
